<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="datasource-context.xml"/>

    <bean id="settings" class="com.rocket.science.Settings">
        <property name="serviceBinder" ref="serviceBinder"/>
    </bean>

    <bean id="serviceBinder" class="com.rocket.science.ServiceBinder">
        <property name="userService" ref="userService"/>
    </bean>

    <bean id="userService" class="com.rocket.science.customermanager.services.UserService">
    </bean>

    <bean id="userDao" class="com.rocket.science.hibernate.dao.UserDao">
        <property name="hibernateTemplate" ref="hibernateTemplate"/>
    </bean>

</beans>