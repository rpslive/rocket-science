<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


       <bean id="settings" class="com.rocket.science.Settings">
              <property name="serviceBinder" ref="serviceBinder"/>
       </bean>

       <bean id="serviceBinder" class="com.rocket.science.ServiceBinder">
             <property name="pingService" ref="pingService"/>
           <property name="driverManagementService" ref="driverManagementService"/>
       </bean>

       <bean id="pingService" class="com.rocket.science.services.PingService"/>
        <bean id="driverManagementService" class="com.rocket.science.services.DriverManagementService"/>

</beans>